                  "_EntryType": { "type": "string" },
                  "_EntryId": { "type": "string" }
                },
                "required": ["_ShrId", "_EntryType", "_EntryId"],
                "refType": ["http://standardhealthrecord.org/spec/shr/test/Simple"]
              }
            },
            "required": ["Value"]
          }
        ]
